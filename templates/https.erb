ListenHTTPS
  Address <%= @address %>
  Port <%= @port %>
  Cert <%= @cert %>
  AddHeader "X-Forwarded-Proto: https"
<% if @calist -%>
  CAlist <%= @calist %>
<% end -%>
<% if @verifylist -%>
  VerifyList <%= @verifylist %>
<% end -%>
<%- if @crllist -%>
  CRLlist <%= @crllist %>
<% end -%>
<%- if @ciphers -%>
  Ciphers <%= @ciphers %>
<% end -%>
<%- if @clientcert -%>
  ClientCert <%= @clientcert %>
<% end -%>
End

Service
  <%- @backend.each_pair do |back_addr, back_port| -%>
  BackEnd
    Address <% back_addr %>
    Port <% back_port %>
  End
  <%- end -%>
  <%- if @session -%>
  Session
    <%- @session.each_pair do |key, val| -%>
    <%= key %>  <%= val %>
    <%- end -%>
  End
  <%- end -%>
End
